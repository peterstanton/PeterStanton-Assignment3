<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.peter.peterstanton_assignment3.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm"
        android:id="@+id/alarmButton"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="toAlarm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Timer"
        android:id="@+id/timerButton"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/alarmButton"
        android:layout_alignLeft="@+id/alarmButton"
        android:layout_alignStart="@+id/alarmButton"
        android:onClick="toTimer" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:id="@+id/phoneButton"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/timerButton"
        android:layout_alignLeft="@+id/timerButton"
        android:layout_alignStart="@+id/timerButton"
        android:onClick="toPhone"/>

</RelativeLayout>
